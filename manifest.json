{
  "manifest_version": 2,

  "name": "Blue Ribbon",
  "description": "Verify before you believe. Blue : Good, Yellow : Debate, Red : Bad, Grey : Untracked",
  "version": "1.0",
      "background": {
        "scripts": ["thirdParty/jquery-3.1.1.js", "background.js"],
        "persistent": false
    },

  "browser_action": {
    "default_icon": "images/blue.png"
   
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "contentSettings",
    "cookies",
    "geolocation",
    "http://*/*"
  ]
}